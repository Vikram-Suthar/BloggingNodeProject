<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
    
</head>
<body>
    <%- include('./partials/nav') %>
    
        <div class="row row-cols-4 justify-content-around ">
            <% blogs.forEach(blog => { %>
                    <div class="card col border-primary mt-4 " style="width: 18rem;">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top mt-3" />
                        <div class="card-body ">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                </div>
            <% }) %>
        </div>
    <%- include('./partials/scripts') %>    
</body>
</html>